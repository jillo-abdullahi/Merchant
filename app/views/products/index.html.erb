<h1>All Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <!--<th>Image url</th>-->
      <th>Stock</th>
      <th>View product</th>
      <th>Buy</th>


    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <!--<td><%= product.title %></td>
        <td><%= product.price %></td>
